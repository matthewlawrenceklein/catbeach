<h1>Welcome to the beach store!</h1>
<div class='d-flex'>
  <table class='table table-striped table-hover table-sm w-50'>
    <thead class='thead-light'>
      <th>name</th>
      <th>description</th>
      <th>price</th>
      <th>available</th>
      <th>effects</th>
      <th>purchase?</th>
    <thead>
    <tbody>
      <% @store_items.each do |item| %>
        <tr>
          <td><%= item[:name] %></td>
          <td><%= item[:description] %></td>
          <td><%= item[:price] %></td>
          <td><%= humanize_boolean(item[:available_to_buy]) %></td>
          <td><%= item[:bonuses].join(', ') %> </td>
          <% if item[:owned] %>
            <td> <button class='btn disabled btn-primary'> owned </button> </td>
          <% elsif item[:price] > current_user.bux %>
            <td> <button class='btn disabled btn-danger'> too $$$ </button> </td>
          <% else %>
            <td> 
              <div class='btn btn-success' href="/users">
              <%= link_to 'purchase', new_item_path(item)%>
              </div> 
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class='w-50 d-flex justify-content-center align-items-center'>
    <p>this is where the image go</p>
  </div>
</div>